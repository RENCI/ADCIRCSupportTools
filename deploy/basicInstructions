
# List images
sudo docker image ls

# Remove existing images

sudo docker image rm -f adcirc_supp:v0.0.1
sudo docker image rm -f renciorg/adcirc_supp:v0.0.1

# Build an image
# sudo docker build --no-cache -t adcirc_supp:latest .
sudo docker build --no-cache -t adcirc_supp:v0.0.2 .


# Reset the tag ID
#sudo docker image tag adcirc_supp:latest renciorg/adcirc_supp:latest
sudo docker image tag adcirc_supp:v0.0.2 renciorg/adcirc_supp:v0.0.2


# Push the image to docker 

sudo docker login
# Give your userid/passwd

# Load for actual cluster usage
# sudo docker push renciorg/adcirc_supp:latest
sudo docker push renciorg/adcirc_supp:v0.0.2


# Start an interactive shell to the image
# sudo docker run -it adcirc_supp:latest bash
sudo docker run -it adcirc_supp:v0.0.2 bash

# CLeanup
# sudo docker system prune -a
